@model PracticeProject.Models.Employee

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <h4>Edit Employee</h4>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class=""></div>
                <div class="m-md-1">
                    <label asp-for="Id" ></label>
                    <br />
                    <input asp-for="Id" class="col-md-10" value="@Model.Id" />
                    <span asp-validation-for="Id"></span>
                </div>
                <br />
                <div class="m-md-1">
                    <label asp-for="Name" ></label>
                    <br />
                    <input asp-for="Name" class="col-md-10" value="@Model.Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <br />
                <div class="m-md-1">
                    <label asp-for="Designation"></label>
                    <br />
                    <input asp-for="Designation" class="col-md-10" value="@Model.Designation" />
                    <span asp-validation-for="Designation"></span>
                </div>
                <br />
                <div class="m-md-1">
                    <label asp-for="Department" ></label>
                    <br />
                    <input asp-for="Department" class="col-md-10" value="@Model.Department" />
                    <span asp-validation-for="Department"></span>
                </div>
                <br />
                <div class="m-md-1">
                    <label asp-for="Salary"></label>
                    <br />
                    <input asp-for="Salary" class="col-md-10" value="@Model.Salary" />
                    <span asp-validation-for="Salary"></span>
                </div>
                <br />
                <div class="m-md-1 mt-1">
                    <input type="submit" value="Save" class="button create-button" />
                </div>
            </form>
        </div>
    </div>
    <div class="m-md-1 text-center">
        <input asp-action="Display" value="Show List" type="submit" class="button list-button"/>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
