@model IEnumerable<PracticeProject.Models.Department>

<div class="container-fluid">
    <div class="row">
        <div class="m-md-2">
            <label>
                <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="GetDeptEmployees">
                    <div>
                        <select name="depName">
                            @foreach (var department in Model)
                            {
                                <option value="@department.Department_Name">
                                    @department.Department_Name
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="button" />
                    </div>
                </form>
            </label>
       </div>
    </div>
</div>
